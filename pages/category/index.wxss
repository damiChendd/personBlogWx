/* pages/category/index.wxss */
.seacher-outer {
    width: 100%;
    height: 60rpx;
    background-color: #eeeeee;
    padding: 20rpx;
}
.seacher-inner{
    background-color: white;
    width: calc(100% - 40rpx);
    height: 50rpx;
    border-radius: 8rpx;
    text-align: center;
    font-size: 14px;
}
.grid-outer{
    display: flex;
    flex-wrap: wrap;
}
.grid-inner{
    width: calc(50% - 10rpx);
    height: 150rpx;
    background-color: white;
    border: 2px solid #eeeeee;
    text-align: center;
    font-size: 14px;
    line-height: 150rpx;
    box-shadow: 0rpx 8rpx 4rpx 4rpx #eeeeeee;
}

